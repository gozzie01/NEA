# FILEPATH: /root/php/php/src/.htaccess
Require all granted
# disable directory browsing
Options -Indexes
# disable directory listing
IndexIgnore *

# disallow includes.php db.php and utils.php
<FilesMatch "^(includes\.php|db\.php|utils\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>
# disable access to .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>
# disable access to .htpasswd
<Files .htpasswd>
    Order allow,deny
    Deny from all
</Files>
# disable access to .git
<Files .git>
    Order allow,deny
    Deny from all
</Files>
# disable access to .gitignore
<Files .gitignore>
    Order allow,deny
    Deny from all
</Files>
<Files README.md>
    Order allow,deny
    Deny from all
</Files>
<Files nav.php>
    Order allow,deny
    Deny from all
</Files>

php_flag display_errors off
php_flag display_startup_errors off
php_flag html_errors off
php_flag log_errors on
